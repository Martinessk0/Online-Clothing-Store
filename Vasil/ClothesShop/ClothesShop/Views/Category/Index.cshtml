@model IEnumerable<ClothesShop.Models.Category>

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Parent ID</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.Name</td>
                <td>@item.ParentID</td>
                <td>@item.IsActive</td>
                <td>
                    <a asp-action="Products" asp-route-id="@item.CategoryID" class="btn btn-info btn-sm">Products</a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
