@model IEnumerable<ClothesShop.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>📦 My Orders</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>You haven't placed any orders yet.</p>

        <form asp-action="CreateOrder" method="post">
            <button type="submit" class="btn btn-success">Create Example Order</button>
        </form>

        <a href="/Category/Products/1" class="btn btn-primary mt-2">Start Shopping</a>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.OrderID</td>
                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>
                        <span class="badge @GetStatusBadge(order.Status)">@order.Status</span>
                    </td>
                    <td>
                        <a href="/Order/Details/@order.OrderID" class="btn btn-info btn-sm">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="CreateOrder" method="post">
        <button type="submit" class="btn btn-success">Create Example Order</button>
    </form>
}

<div class="mt-3">
    <a href="/Category/Products/1" class="btn btn-secondary">Continue Shopping</a>
</div>

@functions {
    string GetStatusBadge(string status)
    {
        return status switch
        {
            "Delivered" => "bg-success",
            "Processing" => "bg-warning",
            "Shipped" => "bg-info",
            _ => "bg-secondary"
        };
    }
}
