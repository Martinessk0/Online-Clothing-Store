@model IEnumerable<ClothesShop.Models.OrderItem>

@{
    ViewData["Title"] = "Order Details";
}

<h1>📦 Order Details #@ViewBag.OrderId</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order Items</h5>

        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>Product #@item.ProductID</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-active">
                    <td colspan="3"><strong>Grand Total:</strong></td>
                    <td><strong>@Model.Sum(item => item.TotalPrice).ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<div class="mt-3">
    <a href="/Order" class="btn btn-secondary">← Back to Orders</a>
    <a href="/Category/Products/1" class="btn btn-primary">Continue Shopping</a>
</div>
